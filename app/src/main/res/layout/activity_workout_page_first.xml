<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050000"
    tools:context=".activities.WorkoutPageFirst">



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="104dp"
        android:text="@string/titleTypeOfWorkouts"
        android:textColor="#F6F3F3"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Icon2"
        android:layout_width="316dp"
        android:layout_height="258dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="180dp"
        android:contentDescription="@string/bettermesecondimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon2"
        tools:ignore="ImageContrastCheck"
        tools:srcCompat="@drawable/icon2" />

    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/buttonStrength"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="60dp"
        android:src="@drawable/bench2"
        android:contentDescription="@string/ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/progress_horizontal"
        tools:ignore="DuplicateSpeakableTextCheck" />

<!--    <pl.droidsonroids.gif.GifImageButton-->
