    <ImageButton
        android:id="@+id/buttonWeightlifting"
        android:layout_width="147dp"
        android:layout_height="120dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="212dp"
        android:contentDescription="@string/weightLiftButtonWithGif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/editbox_dropdown_dark_frame" />

    <ImageButton
        android:id="@+id/buttonOlympic"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="424dp"
        android:layout_marginEnd="60dp"

        android:contentDescription="@string/ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/progress_horizontal" />

    <ImageButton
        android:id="@+id/buttonCalisthenics"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="424dp"
        android:layout_marginEnd="212dp"
        android:contentDescription="@string/ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/progress_horizontal" />

    <ImageButton
        android:id="@+id/buttonHiit"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="212dp"
        android:contentDescription="@string/ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/progress_horizontal" />

    <ImageButton
        android:id="@+id/buttonCrossfit"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="60dp"
        android:contentDescription="@string/ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/progress_horizontal" />


    <Button
        android:id="@+id/buttontoSecondWorkout"
        android:layout_width="209dp"
        android:layout_height="79dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="24dp"
        android:text="@string/buttonNext"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu"/>


